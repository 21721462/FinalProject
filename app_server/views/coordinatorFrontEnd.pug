	body
		div
			.mainheader
				img.header_BG(src='https://secure.csse.uwa.edu.au/newcss/graphics/header-background-02.jpg', alt='')
				img.UWALogo(src='https://secure.csse.uwa.edu.au/newcss/graphics/uwacrest.png', alt='UWA LOGO')
				h1 Faculty of Engineering and Mathematical Sciences
				.pageTitle
					h2 BE and MPE Final Year Project
			.pageSubTitle
				h1 Coordinator Tools
			.tab
				button.tabLinks(onclick="openTab(event, 'StudentPreferences')",) Student Preferences
				button.tabLinks(onclick="openTab(event, 'ProjectList')") Project List
				button.tabLinks(onclick="openTab(event, 'Allocations')") Allocations

			#StudentPreferences.tabContent
				-var students = JSON.parse(jsonthing);
					table#studentTable.newTable.nowrap(cellspacing='0', width='100%')
						thead
							tr
								th Student Number
								th Given Name
								th Family Name
								th WAM
								th Discipline
								th First Preference
								th Second Preference
								th Third Preference
								th Fourth Preference
								th Fifth Preference
								th Sixth Preference
								th
						tfoot
							tr
								th Student Number
								th Given Name
								th Family Name
								th WAM
								th Discipline
								th First Preference
								th Second Preference
								th Third Preference
								th Fourth Preference
								th Fifth Preference
								th Sixth Preference
								th
						tbody
							each o in students
								tr(id=o._id, for=o._id, name=o.id)
									td() #{o.studentID}
									td() #{o.firstName}
									td() #{o.lastName}
									td() #{o.wam}
									td() #{o.discipline}
									td() #{o.preferences[0]}
									td() #{o.preferences[1]}
									td() #{o.preferences[2]}
									td() #{o.preferences[3]}
									td() #{o.preferences[4]}
									td() #{o.preferences[5]}
									td
										img.btnEdit(src='http://www.stjohnpigeon.com/ministryinc/images/related/edit-icon.png')
										img.btnDelete(src='http://www.goldstockdata.com/images/site/icon_autosuggest_delete.png')

			#ProjectList.tabContent
				-var projects = JSON.parse(jsonProject);
				table#projectTable.display.nowrap(cellspacing='0', width='100%')
					thead
						tr
							th Project Title
							th Supervisor1
							th Supervisor2
							th Supervisor3
							th Project Description
							th Prerequisite Skills
							th Minimum Capacity
							th Maximum Capacity
							th Discipline
							th
					tfoot
						tr
							th Project Title
							th Supervisor1
							th Supervisor2
							th Supervisor3
							th Project Description
							th Prerequisite Skills
							th Minimum Capacity
							th Maximum Capacity
							th Discipline
							th
					tbody
						each o in projects
							tr(id=o._id, for=o._id, name=o.id)
								td() #{o.title}
								td() #{o.supervisor}
								td() #{o.supervisor2}
								td() #{o.supervisor3}
								td() #{o.description}
								td() #{o.prerequisites}
								td() #{o.capacityMIN}
								td() #{o.capacityMAX}
								td() #{o.discipline}
								td
									img.btnEdit(src='http://www.stjohnpigeon.com/ministryinc/images/related/edit-icon.png')
									img.btnDelete(src='http://www.goldstockdata.com/images/site/icon_autosuggest_delete.png')

			#Allocations.tabContent
				table#allocationTable.display.nowrap(cellspacing='0', width='100%')
					thead
						tr
							th StudentID
							th Last Name
							th First Name
							th Phone Number
							th Project Allocation
							th
					tfoot
						tr
							th StudentID
							th Last Name
							th First Name
							th Phone Number
							th Project Allocation
							th
					tbody
						each o in students
							tr(id=o._id, for=o._id, name=o.id)
								td() #{o.studentID}
								td() #{o.lastName}
								td() #{o.firstName}
								td() #{o.phoneNumber}
								td() #{o.assignedProject}
								td
									img.btnEdit(src='http://www.stjohnpigeon.com/ministryinc/images/related/edit-icon.png')
									img.btnDelete(src='http://www.goldstockdata.com/images/site/icon_autosuggest_delete.png')
