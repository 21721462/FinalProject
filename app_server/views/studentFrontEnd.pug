html
    head
        title Student Projects Allocation Form
        link(rel='stylesheet', href='/stylesheets/genCSS.css')
        link(rel='stylesheet', type='text/css', href='/stylesheets/coordinatorFrontEnd.css')
        link(href='https://fonts.googleapis.com/css?family=Ubuntu', rel='stylesheet')
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
        script(src='studentFrontEnd.js')
        
    body
        .mainheader
            img.header_BG(src='https://secure.csse.uwa.edu.au/newcss/graphics/header-background-02.jpg', alt='')
            img.UWALogo(src='https://secure.csse.uwa.edu.au/newcss/graphics/uwacrest.png', alt='UWA LOGO')
            h1 Faculty of Engineering and Mathematical Sciences
            .pageTitle
                h2 BE and MPE Final Year Project
        .pageSubTitle
                h1 Student Registration form 
        form(action='', method='POST')
            fieldset
                p#errorprint #{err}
                legend Personal Details
                label First Name: 
                input#firstName(type='text', name='firstName', required)
                br
                br
                label Last Name: 
                input#lastName(type='text', name='lastName', required)
                br
                br
                label Student Number: 
                input#studentID(type='number', name='studentID', maxlength='8', size='8', required)
                br
                br
                label Phone Number: 
                input#studentPhoneNumber(type='text', name='studentPhoneNumber', minlength='10', maxlength='12', required)
                br
                br
                label Discipline: 
                br
                input#discipline(type='radio', name='discipline', value='Electrical', required)
                |  Electrical 
                input#discipline(type='radio', name='discipline', value='Mechanical', required)
                |  Mechanical 
                input#discipline(type='radio', name='discipline', value='Chemical', required)
                |  Chemical 
                input#discipline(type='radio', name='discipline', value='Software', required)
                | Software 
                input#discipline(type='radio', name='discipline', value='Civil', required)
                | Civil 
                input#discipline(type='radio', name='discipline', value='Environmental', required)
                |  Environmental 
            fieldset
                
                legend Projects Preferences
                p #{preferrs}

                label First Preference:
                select(name='options', required)
                    option(value='None', required) Pick Your Preference
                     each o in projects
                        option(value=o.title) #{o.discipline} #{o.title} 
                br
                br
                label Second Preference:
                select(name='options')
                    option(value='None') Pick Your Preference
                     each o in projects
                        option(value=o.title) #{o.discipline} #{o.title} 
                br
                br
                label Third Preference:
                select(name='options', required)
                    option(value='None') Pick Your Preference:
                     each o in projects
                        option(value=o.title) #{o.discipline} #{o.title} 
                br
                br
                label Fourth Preference:
                select(name='options', required)
                    option(value='None') Pick Your Preference
                     each o in projects
                        option(value=o.title) #{o.discipline} #{o.title} 
                br
                br
                label Fifth Preference:
                select(name='options', required)
                    option(value='None') Pick Your Preference
                     each o in projects
                        option(value=o.title) #{o.discipline} #{o.title} 
                br
                br
                label Sixth Preference:
                select(name='options', required)
                    option(value='None') Pick Your Preference
                     each o in projects
                        option(value=o.title) #{o.discipline} #{o.title}
            input.buttonType(type='submit', value='Submit')
            input.buttonType(type='reset', value='Reset')
